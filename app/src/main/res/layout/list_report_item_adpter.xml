<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party Name"
                android:layout_marginStart="10dp"
                android:textColor="@color/slate_gray"
                android:maxLines="1"
                android:textAllCaps="true"
                android:id="@+id/textParty_name"
                style="@style/TextAppearance.AppCompat"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Qty"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/slate_gray"
                android:maxLines="1"
                style="@style/TextAppearance.AppCompat"
                android:id="@+id/text_total_qty"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill Amt"
                android:paddingStart="10dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:maxLines="1"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                style="@style/TextAppearance.AppCompat"
                android:background="@color/light_grey"
                android:textColor="@color/slate_gray"
                android:id="@+id/textBillAmt"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill No"
                android:layout_marginEnd="10dp"
                android:textColor="@color/slate_gray"
                android:gravity="end"
                android:maxLines="1"
                android:id="@+id/textBillNo"
                style="@style/TextAppearance.AppCompat"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill Date"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/textBillDate"
                android:gravity="end"
                android:maxLines="1"
                style="@style/TextAppearance.AppCompat"
                android:textColor="@color/slate_gray"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Narration"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/textNarration"
                android:gravity="end"
                android:maxLines="1"
                style="@style/TextAppearance.AppCompat"
                android:textColor="@color/slate_gray"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>